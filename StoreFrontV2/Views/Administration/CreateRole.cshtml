@model CreateRoleViewModel
@{
    ViewData["Title"] = "Create a Role";
}

<h2 class="title text-center">Add Role</h2>
<div class="row mb-5">
     <div class="col-md-4 col-md-offset-4" id="roleContainer"> 
        <form asp-action="CreateRole" method="post" class="mt-3">
            <div asp-validation-summary="All" class="text-danger"></div>
        
            <div class="form-group row">
                <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="RoleName" class="form-control" placeholder="Name" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>
        
            <div class="form-group row text-center">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" style="width:auto">
                        Create Role
                    </button>
                    <a asp-action="ListRoles" class="btn btn-primary" asp-controller="Administration">Back to Roles</a>
                </div>

            </div>
        </form>
    </div>
</div>