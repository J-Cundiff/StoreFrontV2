@model IEnumerable<StoreFrontV2.DATA.EF.Models.Shipper>

@{
    ViewData["Title"] = "Shippers";
}

<h2 class="title text-center">Shippers</h2>

<div class="row text-center mb-5">
    <a asp-action="Create" class="btn btn-primary">Add Shipper</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShipperName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.ShipperId">
                @Html.DisplayFor(modelItem => item.ShipperName)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ShipperId">Edit</a> |
                @*<a asp-action="Details" asp-route-id="@item.ShipperId">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.ShipperId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
