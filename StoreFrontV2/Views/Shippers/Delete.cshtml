@model StoreFrontV2.DATA.EF.Models.Shipper

@{
    ViewData["Title"] = "! Delete " + Model.ShipperName + " ?!";
}

<h2 class="title text-center">@ViewData["Title"]</h2>

<div class="row mb-5">
    <h3 class="text-center">This will permentaly remove this record and cannot be undone!</h3>
    <dl class="col-md-4 col-md-offset-5">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShipperName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShipperName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dd>
            <form asp-action="Delete">
                <input type="hidden" asp-for="ShipperId" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-success">Back to Shippers</a>
            </form>
        </dd>
    </dl>
</div>
