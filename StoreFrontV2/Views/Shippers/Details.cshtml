@model StoreFrontV2.DATA.EF.Models.Shipper

@{
    ViewData["Title"] = Model.ShipperName + " Details";
}

<h2 class="title text-center">@ViewData["Title"]</h2>

<div class="row">
    <dl class="col-md-4 col-md-offset-4">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShipperName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShipperName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dd>
            <a asp-action="Edit" asp-route-id="@Model?.ShipperId" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-success">Back to Shippers</a>
        </dd>
    </dl>
</div>
