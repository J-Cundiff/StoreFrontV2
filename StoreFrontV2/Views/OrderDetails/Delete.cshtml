@model StoreFrontV2.DATA.EF.Models.OrderDetail

@{
    ViewData["Title"] = "! Delete Order " + Model.OrderId + "?!";
}

<h2 class="title text-center">@ViewData["Title"]</h2>

<div class="row">

    <dl class="col-md-6 col-md-offset-3" id="orderDetailContainer">
    <h3 class="text-center">This will permentaly remove this record and cannot be undone.</h3>
        <dt class = "col-sm-2">
             @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShipperName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShippedCity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShippedCity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShippedState)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShippedState)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShippedCountry)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShippedCountry)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        @*<dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShippingCost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShippingCost)
        </dd>*@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerId)
        </dd>
        <div class="row mb-5" align="center">
            <form asp-action="Delete">
                <input type="hidden" asp-for="OrderId" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-primary">Back to Order Details</a>
            </form>
        </div>
    </dl>
</div>
