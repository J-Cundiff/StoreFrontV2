        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShipperName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShippedCity)
        </dt>
        <dd class = "col-sm-10">
