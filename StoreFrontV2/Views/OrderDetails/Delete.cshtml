        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShippedState)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShippedState)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShippedCountry)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShippedCountry)
        </dd>
        <dt class = "col-sm-2">
