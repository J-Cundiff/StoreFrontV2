@model StoreFrontV2.DATA.EF.Models.Product

@{
    ViewData["Title"] = Model.ProductName + " Details";
}




<div class="row">

        <div class="col-sm-9 col-md-offset-2">
        	<div class="product-details">
        		<!--product-details-->
        		<div class="col-sm-5">
        			<div class="view-product">
        				@*add Model.ProductImage when get photos*@
        				<img src="~/images/@Model.ProductImage" alt="@Model.ProductDescription" />
        			</div>
        		</div>
        		<div class="col-sm-7">
        			<div class="product-information">
        				<!--/product-information-->
        				<h2><strong>@Model.ProductName</strong></h2>
        				<p>Product ID: @Model.ProductId</p>
        				<span>
        					<span>US @Html.DisplayFor(model => model.ProductPrice)</span>
        					<label>Quantity:</label>
        					<input type="text" value="3" />
        					<button type="button" class="btn btn-fefault cart">
        						<i class="fa fa-shopping-cart"></i>
        						Add to cart
        					</button>
        				</span>
        				<p><b>Availability:</b> @Model.Status.StatusName</p>
        				<p><b>Brand:</b> @Model.Supplier.SupplierName</p>
                        <div>
                            <a asp-action="TiledProducts" class="btn btn-primary">Back to Products</a>
                        </div>
        			</div><!--/product-information-->
        		</div>
        	</div><!--/product-details-->
        </div>
        
</div>




