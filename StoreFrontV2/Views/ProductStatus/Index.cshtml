@model IEnumerable<StoreFrontV2.DATA.EF.Models.ProductStatus>

@{
    ViewData["Title"] = "Product Status";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Add New Status</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                
                @Html.DisplayNameFor(model => model.StatusName)
                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.StatusId">
                @Html.DisplayFor(modelItem => item.StatusName)
                    </a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StatusId">Edit</a> |
                @*<a asp-action="Details" asp-route-id="@item.StatusId">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.StatusId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
